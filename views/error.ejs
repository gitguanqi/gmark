<!DOCTYPE html>
<html lang="en">
  <head>
    <meta charset="UTF-8">
    <title>404-小奇便签</title>
    <meta name="viewport" content="width=device-width, initial-scale=1">
    <link rel="stylesheet" type="text/css" href="/css/bootstrap.css">
    <style>
      h1,p {
        text-align: center;
      }
    </style>
  </head>
  <body>
    <div class="container-fulid">
      <div class="row">
        <div class="col-lg-12 col-md-12 col-sm-12 col-xs-12">
          <h1>404</h1>
          <p id="current">当前时间：</p>
          <hr>
        </div>
        <div class="col-lg-12 col-md-12 col-sm-12 col-xs-12">
          <p>Not Found</p>
          <p><a href="/admin">返回首页</a></p>
        </div>
      </div>
    </div>
    <script>
      function showTime() {
        var now = new Date();
        var current = now.getFullYear()+'-'+now.getMonth()+'-'+now.getDate();
        var currento = now.getHours()+':'+ now.getMinutes() +':'+ now.getSeconds();
        var page = document.querySelector('#current');
        page.innerHTML = '当前时间：'+current+ '&nbsp;' +currento;
      }
      var timer = setInterval(showTime,1000);
    </script>
  </body>
</html>