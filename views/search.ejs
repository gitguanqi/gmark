<%- include layout/head.ejs %>
<%- include layout/nav.ejs  %>
    <div class="container">
      <ol class="breadcrumb">
        <li><a href="/admin">首页</a></li>
        <li>搜索</li>
      </ol> 
      <div class="panel panel-default">
        <div class="panel-body">
          以下是搜索结果：共<b><%= count %></b>条查询记录。
        </div>
      </div>
      <div class="row text-center">
        <div class="col-lg-12 col-md-12 col-sm-12 col-xs-12">
          <table class="table table-striped table-hover table-responsive">
            <tr>
              <th class="text-center">ID</th>
              <th class="text-center">作者</th>
              <th class="text-center">标题</th>
              <th class="text-center">分类</th>
              <th class="text-center">操作</th>
            </tr>
            <% if(list.length != 0) { %>
              <% list.forEach(function(item,index){ %>
                <tr>
                  <td><%= index+1 %></td>
                  <td><%= item.author %></td>
                  <td><%= item.title %></td>
                  <td><%= item.name.name %></td>
                  <td>
                    <a class="btn btn-default btn-sm" href="/admin/mark/info?id=<%= item.id %>">查看</a>
                  </td>
                </tr>
              <% }) %>
            <% }else{ %>
              <tr>
                <td colspan="4">暂无数据</td>
              </tr>
            <% } %>
          </table>
        </div>
        <div class="col-lg-12 col-md-12 col-sm-12 col-xs-12">
          <nav aria-label="Page navigation">
            <ul class="pagination">
              <% for(var i=0;i<allpage;i++){ %>
                <% if(current == i){ %>
                  <li class="active"><a href="/admin/search?page=<%= i+1 %>&key=<%= key %>&origin=<%= origin %>"><%= i+1 %></a></li>
                <% }else{ %>
                  <li><a href="/admin/search?page=<%= i+1 %>&key=<%= key %>&origin=<%= origin %>"><%= i+1 %></a></li>
                <% } %>
              <% } %>
            </ul>
          </nav>
        </div>
      </div>
    </div>
<%- include layout/foot.ejs  %>