<%- include layout/head.ejs %>
<%- include layout/nav.ejs  %>
    <div class="container">
      <ol class="breadcrumb">
        <li><a href="/admin">首页</a></li>
        <li>便签添加</li>
      </ol>
      <div class="row text-center">
        <div class="col-lg-12 col-md-12 col-sm-12 col-xs-12">
            <form class="form-horizontal">
                <div class="form-group">
                    <label for="title" class="col-sm-2 control-label">便签标题：</label>
                    <div class="col-sm-10">
                    <input type="text" class="form-control" name="title" id="title" placeholder="请输入便签标题">
                    </div>
                </div>
                <div class="form-group">
                    <label for="type" class="col-sm-2 control-label">便签分类：</label>
                    <div class="col-sm-3">
                        <select class="form-control" name="type" id="type">
                            <% type.forEach(function(item,index){ %>
                                <option value="<%= item._id %>"><%= item.name %></option>
                            <% }) %>
                        </select>
                    </div>    
                </div>
                <div class="form-group">
                    <label for="author" class="col-sm-2 control-label">作者：</label>
                    <div class="col-sm-3">
                        <select class="form-control" name="author" id="author">
                            <% user.forEach(function(item,index){ %>
                                <option value="<%= item.username %>"><%= item.username %></option>
                            <% }) %>
                        </select>
                    </div>    
                </div>
                <div class="form-group">
                    <label for="content" class="col-sm-2 control-label">便签内容：</label>
                    <div class="col-sm-10">
                        <textarea class="form-control" rows="6" name="content" id="content" placeholder="请输入便签内容"></textarea>
                    </div>
                </div>
                <div class="form-group">
                    <div class="col-sm-offset-1 col-sm-3">
                        <button type="submit" class="btn btn-primary">提交</button>
                    </div>
                </div>
            </form>
        </div>
      </div>
    </div>
    <script src="/js/jquery.js"></script>
    <script src="/js/layer.js"></script>
    <script src="/js/admin/cookie.js"></script>
    <script src="/js/admin/markadd.js"></script>
<%- include layout/foot.ejs  %>