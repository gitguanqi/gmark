<%- include layout/head.ejs %>
<%- include layout/nav.ejs  %>
    <div class="container">
      <ol class="breadcrumb">
        <li><a href="/admin">首页</a></li>
        <li>设置</li>
      </ol>
      <div class="row text-center">
        <div class="col-lg-12 col-md-12 col-sm-12 col-xs-12">
            <p class="text-left"><a href="/admin/set/add">管理员添加</a></p>
        </div>
        <div class="col-lg-12 col-md-12 col-sm-12 col-xs-12">
          <table class="table table-striped table-hover table-responsive">
            <tr>
              <th class="text-center">ID</th>
              <th class="text-center">管理员</th>
              <th class="text-center">密码</th>
              <th class="text-center">级别</th>
              <th class="text-center">操作</th>
            </tr>
            <% if(res.length != 0) { %>
              <% res.forEach(function(item,index){ %>
                  <tr>
                    <td><%= index+1 %></td>
                    <td><%= item.username %></td>
                    <td><%= item.password %></td>
                    <td>
                      <% if(item.level == 'super'){ %>
                        <span>超级管理员</span>
                      <% }else if(item.level == 'admin'){ %>
                        <span>管理员</span>
                      <% }else{ %>
                        <span>编辑</span>
                      <% } %>
                    </td>
                    <td>
                        <% if(item.level == 'super'){ %>
                          <a class="btn btn-primary btn-sm fixpwd" href="/admin/set/edit?id=<%= item.id %>">修改密码</a>
                        <% }else if(item.level == 'admin'){ %>
                          <a class="btn btn-primary btn-sm fixpwd" href="/admin/set/edit?id=<%= item.id %>">修改密码</a>
                        <% }else { %>
                          <a class="btn btn-primary btn-sm" href="/admin/set/edit?id=<%= item.id %>">修改密码</a>
                      <% } %>
                        <a class="btn btn-danger btn-sm del_btn" onclick="markDel('admin','<%= item.id %>')">删除</a>
                    </td>
                  </tr>
              <% }) %>
            <% }else{ %>
              <tr>
                <td colspan="3">暂无数据</td>
              </tr>
            <% } %>
          </table>
        </div>
      </div>
    </div>
    <script src="/js/jquery.js"></script>
    <script src="/js/layer.js"></script>
    <script src="/js/admin/markdel.js"></script>
<%- include layout/foot.ejs  %>