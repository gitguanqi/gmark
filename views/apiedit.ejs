<%- include layout/head.ejs %>
<%- include layout/nav.ejs  %>
    <div class="container">
      <ol class="breadcrumb">
        <li><a href="/admin">首页</a></li>
        <li><a href="/api">接口列表</a></li>
        <li>接口编辑</li>
      </ol>
      <div class="row text-center">
        <div class="col-lg-12 col-md-12 col-sm-12 col-xs-12">
            <form class="form-horizontal">
                <div class="form-group">
                    <label for="title" class="col-sm-2 control-label">接口标题：</label>
                    <div class="col-sm-10">
                    <input type="text" class="form-control" name="title" id="title" placeholder="请输入接口标题" value="<%= res.title %>">
                    </div>
                </div>
                <input type="hidden" name="id" value="<%= id %>">
                <div class="form-group">
                    <label for="addr" class="col-sm-2 control-label">接口地址：</label>
                    <div class="col-sm-10">
                    <input type="url" class="form-control" name="addr" id="addr" placeholder="请输入接口地址" value="<%= res.addr %>">
                    </div>
                </div>
                <div class="form-group">
                    <label for="params" class="col-sm-2 control-label">接口参数：</label>
                    <div class="col-sm-10">
                    <input type="text" class="form-control" name="params" id="params" placeholder="请输入接口参数" value="<%= res.params %>">
                    </div>
                </div>
                <div class="form-group">
                    <label for="methods" class="col-sm-2 control-label">请求方式：</label>
                    <div class="col-sm-3">
                        <select class="form-control" name="methods" id="methods">
                            <option selected value="get">get</option>
                            <option selected value="post">post</option>
                        </select>
                    </div>
                </div>
                <div class="form-group">
                    <label for="comment" class="col-sm-2 control-label">接口描述：</label>
                    <div class="col-sm-10">
                        <textarea class="form-control" rows="6" name="comment" id="comment" placeholder="请输入接口描述"><%= res.title %></textarea>
                    </div>
                </div>
                <div class="form-group">
                    <div class="col-sm-offset-1 col-sm-3">
                        <button type="submit" class="btn btn-primary">保存</button>
                    </div>
                </div>
            </form>
        </div>
      </div>
    </div>
    <script src="/js/jquery.js"></script>
    <script src="/js/layer.js"></script>
    <script src="/js/admin/cookie.js"></script>
    <script src="/js/api/apiedit.js"></script>
<%- include layout/foot.ejs  %>