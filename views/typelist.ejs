<%- include layout/head.ejs %>
<%- include layout/nav.ejs  %>
    <div class="container">
      <ol class="breadcrumb">
        <li><a href="/admin">首页</a></li>
        <li>分类列表</li>
      </ol> 
      <div class="panel panel-default">
        <div class="panel-body">
          这里是分类列表，记录所有的分类！
        </div>
      </div>
      <div class="row text-center">
        <div class="col-lg-12 col-md-12 col-sm-12 col-xs-12">
          <table class="table table-striped table-hover table-responsive">
            <tr>
              <th class="text-center">序号</th>
              <th class="text-center">分类名称</th>
              <th class="text-center">操作</th>
            </tr>
            <% if(res.length != 0) { %>
              <% res.forEach(function(item,index){ %>
                <tr>
                  <td><%= index+1 %></td>
                  <td><%= item.name %></td>
                  <td>
                    <a class="btn btn-primary btn-sm" href="/admin/type/edit?id=<%= item.id %>">编辑</a>
                    <a class="btn btn-danger btn-sm del-btn" onclick="markDel('type','<%= item.id %>')">删除</a>
                  </td>
                </tr>
              <% }) %>
            <% }else{ %>
              <tr>
                <td colspan="3">暂无数据</td>
              </tr>
            <% } %>
          </table>
          <p>总记录：<strong><%= count %></strong>条。</p>
        </div>
        <div class="col-lg-12 col-md-12 col-sm-12 col-xs-12">
          <nav aria-label="Page navigation">
            <ul class="pagination">
              <% if(current <= 0){ %>
                <li class="disabled">
                  <a href="javascript:;">
                    <span aria-hidden="true">&laquo;</span>
                  </a>
                </li>
              <% }else{ %>
                <li>
                  <a href="/admin/type/list?page=<%= current %>">
                    <span aria-hidden="true">&laquo;</span>
                  </a>
                </li>
              <% } %>
              <% for(var i=0;i<allpage;i++){ %>
                <% if(current == i){ %>
                  <li class="active"><a href="/admin/type/list?page=<%= i+1 %>"><%= i+1 %></a></li>
                <% }else{ %>
                  <li><a href="/admin/type/list?page=<%= i+1 %>"><%= i+1 %></a></li>
                <% } %>
              <% } %>
              <% if(current+1 < allpage){ %>
                <li>
                  <a href="/admin/type/list?page=<%= current+2 %>">
                    <span aria-hidden="true">&raquo;</span>
                  </a>
                </li>
              <% }else{ %>
                <li class="disabled">
                  <a href="javascript:;">
                    <span aria-hidden="true">&raquo;</span>
                  </a>
                </li>
              <% } %>
            </ul>
          </nav>
        </div>
      </div>
    </div>
    <script src="/js/jquery.js"></script>
    <script src="/js/layer.js"></script>
    <script src="/js/admin/markdel.js"></script>
<%- include layout/foot.ejs  %>