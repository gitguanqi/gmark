<%- include layout/head.ejs %>
<%- include layout/nav.ejs  %>
    <div class="container">
      <ol class="breadcrumb">
        <li><a href="/admin">首页</a></li>
        <li><a href="/admin/set">管理员列表</a></li>
        <li>管理员添加</li>
      </ol>
      <div class="row text-center">
        <div class="col-lg-12 col-md-12 col-sm-12 col-xs-12">
            <form class="form-horizontal">
                <div class="form-group">
                    <label for="username" class="col-sm-2 control-label">管理员昵称：</label>
                    <div class="col-sm-10">
                    <input type="text" class="form-control" name="username" id="username" placeholder="请输入管理员昵称">
                    </div>
                </div>
                <div class="form-group">
                    <label for="password" class="col-sm-2 control-label">管理员密码：</label>
                    <div class="col-sm-10">
                    <input type="password" class="form-control" name="password" id="password" placeholder="请输入管理员密码">
                    </div>
                </div>
                <div class="form-group">
                    <label for="level" class="col-sm-2 control-label">管理员级别：</label>
                    <div class="col-sm-3">
                        <select class="form-control" name="level" id="level">
                            <option value="">请选择</option>
                            <option value="super" class="levelone">超级管理员</option>
                            <option value="admin" class="leveltwo">管理员</option>
                            <option value="editor" class="levelthree">编辑</option>
                        </select>
                    </div>
                </div>
                <div class="form-group">
                    <div class="col-sm-offset-1 col-sm-3">
                        <button type="submit" class="btn btn-primary" id="subres">提交</button>
                    </div>
                </div>
            </form>
        </div>
      </div>
    </div>
    <script src="/js/jquery.js"></script>
    <script src="/js/layer.js"></script>
    <script src="/js/admin/setadd.js"></script>
<%- include layout/foot.ejs  %>